<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_clock_widget"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top|center_horizontal">

    <ImageView
        android:contentDescription="@string/circleDesc"
        android:id="@+id/backgroundCircle"
        tools:layout_constraintRight_creator="1"
        custom:layout_constraintRight_toRightOf="parent"
        custom:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/persona_clock_cropped" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:layout_alignBottom="@+id/backgroundCircle"
        android:layout_alignEnd="@+id/backgroundCircle"
        android:gravity="bottom|end">

        <ImageView
            android:id="@+id/weatherIcon"
            android:src="@drawable/unknown"
            android:contentDescription="@string/weatherDesc"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="25dp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:background="@drawable/layout_bg"
        android:id="@+id/frameLayout"
        custom:layout_constraintBottom_toTopOf="@+id/timeOfDay"
        custom:layout_constraintRight_toRightOf="@+id/timeOfDay"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:contentDescription="@string/dayDateDesc"
            android:layout_width="wrap_content"
            android:id="@+id/dayDate"
            android:layout_gravity="center"
            android:layout_marginTop="-3dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />
    </FrameLayout>

    <ImageView
        android:contentDescription="@string/timeDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeOfDay"
        android:src="@drawable/night"
        android:scaleX=".6"
        android:scaleY=".6"
        android:layout_below="@+id/frameLayout"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="-23dp" />

</RelativeLayout>